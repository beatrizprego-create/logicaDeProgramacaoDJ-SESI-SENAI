algoritmo "exl"
// entrada cotacao
// processo cotacao * dolar
// saida real
var
dolar, valorConvertido, cotacao: real
  numero: inteiro

inicio
cotacao <- 5.10

escreva("Quantos dolares para converter: $")
leia(dolar)

valorConvertido <- dolar * cotacao

escreval("O valor em reais e de:  R$"+valorConvertido)


fimalgoritmo
