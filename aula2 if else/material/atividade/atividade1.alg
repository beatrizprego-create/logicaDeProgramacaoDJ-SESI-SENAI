algoritmo "cotação do dólar"

var
cotacaoDolar, valorDolar, valorReal: real
  numero: inteiro

inicio
escreval("Digite a cotacao do dolar:")
  leia(cotacaoDolar)
escreval("Digite o valor em dólares:")
  leia(valorDolar)
// converter dolar para reais 

 valorReal := cotacaoDolar * valorDolar

 escreval("O valor em Real é: R$ ", valorReal:0:2)


fimalgoritmo


